    <endEvent id="endevent1" name="End"></endEvent>
    <serviceTask id="sendEmail" name="Enviar Notificación" activiti:class="com.ilumno.bps.pdp.task.SendEmailTask">
      <extensionElements>
        <activiti:field name="to">
          <activiti:expression><![CDATA[${mailRecipient}]]></activiti:expression>
        </activiti:field>
        <activiti:field name="subject">
          <activiti:expression><![CDATA[${mailSubject}]]></activiti:expression>
        </activiti:field>
