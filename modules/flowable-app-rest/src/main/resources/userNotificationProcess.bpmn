        </activiti:field>
        <activiti:field name="body">
          <activiti:expression><![CDATA[${mailHtml}]]></activiti:expression>
        </activiti:field>
      </extensionElements>
    </serviceTask>
    <sequenceFlow id="flow5" sourceRef="servicetask1" targetRef="sendErrorEmail"></sequenceFlow>
    <sequenceFlow id="flow6" sourceRef="sendErrorEmail" targetRef="endevent2"></sequenceFlow>
    <scriptTask id="scripttask1" name="Variable Cleanup" scriptFormat="javascript" activiti:autoStoreVariables="false">
      <script>execution.setVariable('mailRecipient', execution.getVariable('mailRecipient') == null? '':execution.getVariable('mailRecipient'));</script>
    </scriptTask>
    <sequenceFlow id="flow7" sourceRef="scripttask1" targetRef="prepareNotificationEmail"></sequenceFlow>
