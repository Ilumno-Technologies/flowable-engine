        </activiti:field>
      </extensionElements>
    </serviceTask>
    <sequenceFlow id="flow2" sourceRef="prepareNotificationEmail" targetRef="sendEmail"></sequenceFlow>
    <sequenceFlow id="flow3" sourceRef="sendEmail" targetRef="endevent1"></sequenceFlow>
    <boundaryEvent id="boundaryerror1" name="Error" attachedToRef="sendEmail">
      <errorEventDefinition errorRef="FailedToSendEmail"></errorEventDefinition>
    </boundaryEvent>
    <serviceTask id="servicetask1" name="Preparar Email De Falla" activiti:class="com.ilumno.bps.pdp.task.PrepareErrorEmailTask"></serviceTask>
    <sequenceFlow id="flow4" sourceRef="boundaryerror1" targetRef="servicetask1"></sequenceFlow>
